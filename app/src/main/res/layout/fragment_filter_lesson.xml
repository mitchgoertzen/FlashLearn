        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSortingOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvHint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingBottom="5dp"
            android:text="Category"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHighlight="#407BF1"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/faded_blue"
            />


        <TextView
            android:id="@+id/tvHint4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingBottom="5dp"
            android:text="Difficulty"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHighlight="#407BF1"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbLevel1"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:buttonTint="@color/faded_blue"
                    android:text="Level 1"
                    android:textColor="@color/blue" />

                <CheckBox
                    android:id="@+id/cbLevel3"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:buttonTint="@color/faded_blue"
                    android:text="Level 3"
                    android:textColor="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbLevel2"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:buttonTint="@color/faded_blue"
                    android:text="Level 2"
                    android:textColor="@color/blue" />

                <CheckBox
                    android:id="@+id/cbLevel4"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:buttonTint="@color/faded_blue"
                    android:text="Level 4"
                    android:textColor="@color/blue" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvHint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Misc"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHighlight="#407BF1"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cbPrac"
                android:layout_width="176dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:buttonTint="@color/faded_blue"
                android:text="Practice Completed"
                android:textColor="@color/blue" />

            <CheckBox
                android:id="@+id/cbTest"
                android:layout_width="176dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:buttonTint="@color/faded_blue"
                android:text="Test Attempted"
                android:textColor="@color/blue" />

            <CheckBox
                android:id="@+id/cbUnlock"
                android:layout_width="176dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:buttonTint="@color/faded_blue"
                android:text="Unlocked"
                android:textColor="@color/blue" />
        </LinearLayout>

        <Button
            android:id="@+id/btnApplyFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Apply"
            android:layout_gravity="right"
            app:strokeColor="#FCD116"
            app:strokeWidth="1dp"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

