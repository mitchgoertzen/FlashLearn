<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Tagalog" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorOnSecondary">@color/secondary</item>

        <item name="colorSecondary">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white</item>
        <item name="colorSecondaryVariant">@color/accent</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorOnError">@color/secondary</item>
        <item name="colorOnTertiary">@color/passingGreen</item>

        <item name="materialButtonStyle">@style/ButtonStyle</item>


        <item name="android:actionBarStyle">@style/DrawerTheme</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/futura_pt_bold</item>
        <item name="fontFamily">@font/futura_pt_bold</item>
        <item name="android:textAllCaps">true</item>

    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">#0038A8</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/futura_pt_bold</item>
        <item name="fontFamily">@font/futura_pt_bold</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="Tagalog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Tagalog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Tagalog.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#80000000</item>
    </style>

    <style name="EditText">
        <item name="colorControlActivated">#dcee30</item>
        <item name="android:textColorHighlight">#590038A8</item>
    </style>


    <style name="MenuEditText">
        <item name="colorControlNormal">#717171</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:textColorHighlight">#590038A8</item>
    </style>

    <style name="DrawerTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorControlHighlight">@android:color/holo_green_dark</item>
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/button_default_height</item>
        <item name="materialButtonStyle">@style/DrawerButtonStyle</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/futura_pt_bold</item>
        <item name="android:fontFamily">@font/futura_pt_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:color">?attr/colorOnPrimary</item>

    </style>

    <style name="DrawerButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">0dp</item>
        <item name="autoSizeMaxTextSize">13sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="maxLines">1</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">3dp</item>
        <item name="autoSizeMaxTextSize">13sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="maxLines">1</item>
    </style>



</resources>